{
    "name": "user-api-bun-test",
    "version": "1.0.50",
    "scripts": {
        "build": "bun build ./src/server.ts --target bun --outdir dist",
        "dev": "bun run --watch src/server.ts",
        "test": "NODE_ENV='test' PORT=3001 bun test",
        "migration:generate": "bunx drizzle-kit generate:pg",
        "migration:revert": "bunx drizzle-kit drop",
        "migration:run": "bun run src/infrastructure/migrations/run-migrations.ts"
    },
    "dependencies": {
        "@elysiajs/jwt": "^0.7.0",
        "cookie": "^0.6.0",
        "drizzle-orm": "^0.29.0",
        "elysia": "0.7.16",
        "postgres": "^3.4.3"
    },
    "devDependencies": {
        "@types/cookie": "^0.5.4",
        "bun-types": "1.0.6",
        "drizzle-kit": "^0.20.4"
    },
    "module": "src/server.js"
}
